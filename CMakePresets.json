{
    "version": 6,
    "configurePresets": [
        {
            "name": "config-base",
            "hidden": true,
            "cacheVariables": {
                "WORMHOLE_SKIP_TEST_RULES": "OFF",
                "WORMHOLE_SKIP_INSTALL_RULES": "OFF",
                "WORMHOLE_SKIP_PACKAGE_RULES": "OFF"
            },
            "installDir": "${sourceParentDir}/out/$env{TARGET_OS}/$env{TARGET_ARCH}/install",
            "binaryDir": "${sourceParentDir}/out/$env{TARGET_OS}/$env{TARGET_ARCH}/build/${sourceDirName}/${presetName}"
        },
        {
            "name": "relwithdebinfo-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CONFIGURATION_TYPES": "RelWithDebInfo"
            }
        },
        {
            "name": "release-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CONFIGURATION_TYPES": "Release"
            }
        },
        {
            "name": "debug-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CONFIGURATION_TYPES": "Debug",
                "CMAKE_DEBUG_POSTFIX": "d"
            }
        },
        {
            "name": "static-relwithdebinfo",
            "inherits": ["config-base", "relwithdebinfo-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded"
            }
        },
        {
            "name": "static-release",
            "inherits": ["config-base", "release-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded"
            }
        },
        {
            "name": "static-debug",
            "inherits": ["config-base", "debug-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebug"
            }
        },
        {
            "name": "shared-relwithdebinfo",
            "inherits": ["config-base", "relwithdebinfo-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL"
            }
        },
        {
            "name": "shared-release",
            "inherits": ["config-base", "release-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL"
            }
        },
        {
            "name": "shared-debug",
            "inherits": ["config-base", "debug-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebugDLL"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "shared-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "shared-debug"
        },
        {
            "name": "shared-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "shared-release"
        },
        {
            "name": "shared-relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "configuration": "RelWithDebInfo",
            "configurePreset": "shared-relwithdebinfo"
        },
        {
            "name": "static-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "static-debug"
        },
        {
            "name": "static-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "static-release"
        },
        {
            "name": "static-relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "configuration": "RelWithDebInfo",
            "configurePreset": "static-relwithdebinfo"
        }
    ],
    "testPresets": [
        {
            "name": "test-base",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            },
            "hidden": true
        },
        {
            "name": "static-release",
            "configurePreset": "static-release",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "static-relwithdebinfo",
            "configurePreset": "static-relwithdebinfo",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "static-debug",
            "configurePreset": "static-debug",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "shared-release",
            "configurePreset": "shared-release",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "shared-relwithdebinfo",
            "configurePreset": "shared-relwithdebinfo",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "shared-debug",
            "configurePreset": "shared-debug",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        }
    ],
    "packagePresets": [
        {
            "name": "debian-package-bin",
            "displayName": "wormhole (DEB)",
            "description": "Debian binary package",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "DEB"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_PACKAGING_INSTALL_PREFIX": "/opt",
                "CPACK_DEBIAN_PACKAGE_RELEASE": "1",
                "CPACK_DEBIAN_PACKAGE_MAINTAINER": "Community",
                "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "A tool for tunneling TCP streams via UDP",
                "CPACK_PACKAGE_DESCRIPTION": "The 'wormhole' tool provides the ability to forward a TCP\nservice via UDP tunnel.",
                "CPACK_COMPONENTS_ALL": "binary_files;bin_deb_files",
                "CPACK_DEBIAN_FILE_NAME": "DEB-DEFAULT",
                "CPACK_DEBIAN_PACKAGE_SHLIBDEPS": "ON",
                "CPACK_DEBIAN_PACKAGE_SHLIBDEPS_PRIVATE_DIRS": "${sourceParentDir}/out/$env{TARGET_OS}/$env{TARGET_ARCH}/install/lib",
                "CPACK_DEBIAN_PACKAGE_GENERATE_SHLIBS": "ON",
                "CPACK_DEBIAN_PACKAGE_SECTION": "utils",
                "CPACK_DEBIAN_DEBUGINFO_PACKAGE": "ON",
                "CPACK_DEB_COMPONENT_INSTALL": "ON",
                "CPACK_COMPONENTS_ALL_IN_ONE_PACKAGE": "ON"
            },
            "packageName": "wormhole",
            "packageDirectory": ".."
        },
        {
            "name": "debian-package-lib",
            "displayName": "libwormhole (DEB)",
            "description": "Debian library package",
            "configurePreset": "shared-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "DEB"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_PACKAGING_INSTALL_PREFIX": "/opt",
                "CPACK_DEBIAN_PACKAGE_RELEASE": "1",
                "CPACK_DEBIAN_PACKAGE_MAINTAINER": "Community",
                "CPACK_DEBIAN_PACKAGE_DEPENDS": "libtubus (>= 1.2.3)",
                "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "C++ development library for tunneling TCP streams via UDP",
                "CPACK_PACKAGE_DESCRIPTION": "The 'wormhole' library provides the ability to forward a TCP\nservice via UDP tunnel.",
                "CPACK_COMPONENTS_ALL": "library_files;lib_deb_files",
                "CPACK_DEBIAN_FILE_NAME": "DEB-DEFAULT",
                "CPACK_DEBIAN_PACKAGE_SHLIBDEPS": "ON",
                "CPACK_DEBIAN_PACKAGE_SHLIBDEPS_PRIVATE_DIRS": "${sourceParentDir}/out/$env{TARGET_OS}/$env{TARGET_ARCH}/install/lib",
                "CPACK_DEBIAN_PACKAGE_GENERATE_SHLIBS": "ON",
                "CPACK_DEBIAN_DEBUGINFO_PACKAGE": "ON",
                "CPACK_DEB_COMPONENT_INSTALL": "ON",
                "CPACK_COMPONENTS_ALL_IN_ONE_PACKAGE": "ON"
            },
            "packageName": "libwormhole",
            "packageDirectory": ".."
        },
        {
            "name": "debian-package-dev",
            "displayName": "libwormhole-dev (DEB)",
            "description": "Debian development package",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "DEB"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_PACKAGING_INSTALL_PREFIX": "/opt",
                "CPACK_DEBIAN_PACKAGE_RELEASE": "1",
                "CPACK_DEBIAN_PACKAGE_MAINTAINER": "Community",
                "CPACK_DEBIAN_PACKAGE_DEPENDS": "libboost-dev (>= 1.74) | libboost1.81-dev, libtubus-dev (>= 1.2.3), libwormhole (= 1.2.4-1)",
                "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "Development files of the 'wormhole' library",
                "CPACK_PACKAGE_DESCRIPTION": "The 'wormhole' library provides the ability to forward a TCP\nservice via UDP tunnel.",
                "CPACK_COMPONENTS_ALL": "archive_files;header_files;cmake_files;dev_deb_files;dev_doc_files",
                "CPACK_DEBIAN_FILE_NAME": "DEB-DEFAULT",
                "CPACK_DEBIAN_PACKAGE_SHLIBDEPS": "ON",
                "CPACK_DEBIAN_PACKAGE_SHLIBDEPS_PRIVATE_DIRS": "${sourceParentDir}/out/$env{TARGET_OS}/$env{TARGET_ARCH}/install/lib",
                "CPACK_DEBIAN_PACKAGE_GENERATE_SHLIBS": "ON",
                "CPACK_DEBIAN_DEBUGINFO_PACKAGE": "ON",
                "CPACK_DEB_COMPONENT_INSTALL": "ON",
                "CPACK_COMPONENTS_ALL_IN_ONE_PACKAGE": "ON"
            },
            "packageName": "libwormhole-dev",
            "packageDirectory": ".."
        },
        {
            "name": "archive",
            "displayName": "wormhole (ZIP)",
            "description": "Portable ZIP archive",
            "configurePreset": "static-relwithdebinfo",
            "generators": [
                "ZIP"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_COMPONENTS_ALL": "binary_files;runtime_files;library_files;archive_files;pdb_files;header_files;cmake_files;dev_doc_files",
                "CPACK_ARCHIVE_COMPONENT_INSTALL": "ON",
                "CPACK_COMPONENTS_ALL_IN_ONE_PACKAGE": "ON"
            },
            "packageName": "wormhole",
            "packageDirectory": ".."
        }
    ],
